<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginVertical="@dimen/vertical_margin_header"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/mediumTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/vertical_margin_header"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/number"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textS" />

    <TextView
        android:id="@+id/teamsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/vertical_margin_header"
        android:layout_marginStart="@dimen/medium_margin"
        android:text="@string/team"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textS" />

    <TextView
        android:id="@+id/pointsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/vertical_margin_header"
        android:layout_marginEnd="@dimen/points_margin_header"
        android:text="@string/points"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textS" />

    <TextView
        android:id="@+id/goalsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/vertical_margin_header"
        android:layout_marginEnd="@dimen/goals_margin_header"
        android:text="@string/goals"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pointsHeader"
        app:layout_constraintTop_toBottomOf="@+id/textS" />

    <TextView
        android:id="@+id/gamesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/vertical_margin_header"
        android:layout_marginEnd="@dimen/games_margin_header"
        android:text="@string/games"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/goalsHeader"
        app:layout_constraintTop_toBottomOf="@+id/textS" />

</androidx.constraintlayout.widget.ConstraintLayout>